<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <me.tedyin.circleprogressbarlib.CircleProgressBar
        android:id="@+id/bar1"
        app:cpbStrokeWidth="15"
        app:cpbBackgroundColor="#9000"
        app:cpbProgressColor="#0b90cf"
        app:cpbProgressTextColor="#ffaabb"
        android:layout_height="56dp"
        android:layout_width="56dp" />

    <me.tedyin.circleprogressbarlib.CircleProgressBar
        android:id="@+id/bar2"
        app:cpbNeedAnim="false"
        app:cpbStrokeWidth="20"
        android:layout_height="80dp"
        android:layout_width="80dp" />

    <me.tedyin.circleprogressbarlib.CircleProgressBar
        android:id="@+id/bar3"
        app:cpbStrokeWidth="20"
        app:cpbMaxAngle="270"
        app:cpbStartAngle="-225"
        android:layout_height="100dp"
        android:layout_width="100dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:text="button"
        android:layout_height="wrap_content" />

</LinearLayout>
